{
  "compilerOptions": {
    "target": "ES2022",                     // Modern JS output
    "module": "CommonJS",                   // Node.js compatible
    "rootDir": "src",                       // Source folder
    "outDir": "dist",                       // Compiled JS output
    "strict": true,                         // Enable all strict type checks
    "esModuleInterop": true,                // Allows import of CommonJS modules
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                   // Skip type checking of node_modules
    "resolveJsonModule": true,              // Allow importing JSON files
    "experimentalDecorators": true,         // Needed if you use decorators (optional)
    "emitDecoratorMetadata": true           // Needed if you use decorators (optional)
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
